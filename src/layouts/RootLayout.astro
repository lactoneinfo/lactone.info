---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/global.css';
// type Props = CollectionEntry<'blog'>['data'];

// const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<div class="headpart">
				<Header />
				<div class="main">
					<slot />
				</div>
				<svg id="2" data-name="bookend" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 435 37.79" class="bookend">
					<defs>
						<style>
						.cls-2 {
							fill: #aaa;
						}
					
						.cls-2, .cls-3, .cls-4 {
							stroke-width: 0px;
						}
					
						.cls-3 {
							fill: var(--paper-color);
						}
					
						.cls-4 {
							fill: var(--table-color);
						}
						</style>
					</defs>
					<polygon class="cls-3" points="0 31.03 0 0 435 0 435 12.9 0 31.03"/>
					<path class="cls-4" d="M0,37.79h435v-15.25S9.66-5.67,0,37.79Z"/>
					<path class="cls-2" d="M435,12.9S12.95-8.03,0,31.03v6.76C0,0,435,22.55,435,22.55v-9.65Z"/>
				</svg>
			</div>
			<Footer />
		</main>
	</body>
	<style>
		main {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			background-color: var(--table-color);
			min-height: 100vh;
			font-family: var(--font-print);
			font-weight: 400;
			font-style: normal;
		}
		.headpart {
			background-color: var(--paper-color);
			padding-bottom: 0;
		}
		.bookend {
			display: block;
		}
		.main {
			position: relative;
			background-color: var(--paper-color);
			padding: 2.3rem 0.8rem 4rem 1.6rem;
			margin: 0;
			display: flex;
			justify-content: center;
			align-items: center;
			flex-direction: column;
		}
		@media (min-width: 768px) {
		.headpart {
			max-width: 768px;
			margin: 0 auto;
		}
}
	</style>
</html>
